# Configuration Smart Shopping Assistant
# Copier ce fichier vers .env et remplir les valeurs

# Configuration Flask
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_SECRET_KEY=votre-clé-secrète-très-longue-et-complexe

# Configuration base de données
DB_PATH=/opt/smart-shopping/smart_shopping.db

# Configuration Email 
GMAIL_EMAIL=rapherv@aol.com
NOTIFICATION_EMAIL=rapherv@aol.com

# Configuration scraping
USER_AGENT=Mozilla/5.0 (X11; Linux armv7l) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Configuration API (optionnel - pour intégrations futures)
JOW_API_KEY=
AMAZON_API_KEY=
CARREFOUR_API_KEY=

# Configuration notifications
NOTIFICATION_EMAIL=rapherv@gmail.com
ENABLE_PRICE_ALERTS=true
ENABLE_PROMOTION_ALERTS=true
ENABLE_SUGGESTION_EMAILS=false

# Configuration surveillance prix
PRICE_CHECK_INTERVAL_HOURS=2
PROMOTION_CHECK_TIME=08:00
CLEANUP_DAY=sunday
CLEANUP_TIME=02:00

# Configuration seuils
MAX_DISCOUNT_THRESHOLD=90.0
MIN_PRICE_ALERT=5.0
MAX_ITEMS_PER_EMAIL=20

# Configuration log
LOG_LEVEL=INFO
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Configuration performance
SELENIUM_HEADLESS=true
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=5

# Configuration base de données (avancé)
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL_DAYS=7
DB_BACKUP_RETENTION_DAYS=30
